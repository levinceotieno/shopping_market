<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    <header>
      <nav class="header-nav">
        <ul class="nav-list">
            <h1>SHOPPING MARKET</h1>
            <% if (isAuthenticated) { %> 
                <li><a href="/user/profile">
                    <% if (user.profile_photo) { %>
                        <img src="<%= user.profile_photo %>" alt="Profile Photo" class="profile-image"> Profile
                    <% } else { %>
                        <img src="/images/default-profile.png" alt="Profile Photo" class="profile-image"> Profile
                    <% } %>
                    <!-- <img src="<%= user.profile_photo %>" alt="Profile Photo" class="profile-image"> Profile -->
                </a></li>
                <li><a href="#cart" class="cart-link">
                    <img src="/images/cart-icon.png" alt="Cart" class="cart-image">
                    <span class="cart-count" id="cart-count"><%= cartItemCount %></span> Cart
                </a></li>
                <li><a href="/orders">My Orders</a></li>
                <li><a href="/user/logout">Logout</a></li>
            <% } else { %>
                <li><a href="#cart" class="cart-link">
                    <img src="/images/cart-icon.png" alt="Cart" class="cart-image">
                    <span class="cart-count" id="cart-count"><%= cartItemCount %></span> Cart
                </a></li>
                <li><a href="/user/login">Login</a></li>
                <li><a href="/user/register">Register</a></li>
            <% } %>
        </ul>
      </nav>
    </header>

    <div class="container">
     <div class="products-header">
      <h2>Products</h2>
      <div class="admin-links">
      <% if (isAdmin) { %>
	<a href="/orders/admin">Update Placed Orders</a>
	<a href="/products/add">Add Products</a>
	<a href="/admin-chat">Chat Room</a>
      <% } %>
      </div>
     </div>

      <div class="search-filter">
        <form id="searchForm">
           <input type="text" id="searchName" placeholder="Search by name">
           <input type="number" id="minPrice" placeholder="Min price">
           <input type="number" id="maxPrice" placeholder="Max price">
           <button type="submit">Search</button>
           <button type="button" id="clearSearch">Clear</button>
        </form>
      </div>

      <div class="product-grid">
         <% products.forEach(product => { %>
            <div class="product-item">
                <img class="product-image" src="<%= product.image_url %>" alt="<%= product.name %>">
                <h3 class="product-title"><%= product.name %></h3>
                <p class="product-price">Ksh. <%= product.price %></p>
                <p class="product-description"><%= product.description %></p>
                <p class="product-status">Status: <%= product.status %></p>
                <button class="btn add-cart" onclick="addToCart('<%= product.id %>', '<%= product.name %>', '<%= product.price %>', '<%= product.image_url %>')">Add to Cart</button>
            </div>
         <% }) %>
      </div>
    </div>

    <!-- Delivery Information Modal -->
    <div id="deliveryModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Delivery Information</h2>
            <label for="address">Delivery Address:</label>
            <input type="text" id="address" name="address" required>
            <label for="pickupPoint">Pickup Point:</label>
            <input type="text" id="pickupPoint" name="pickupPoint" required>
            <div class="option-group">
	       <label>
		 <input type="radio" name="isNairobi" value="yes" required> Within Nairobi
	       </label>
	       <label>
		 <input type="radio" name="isNairobi" value="no"> Outside Nairobi
	       </label>
	    </div>
            <button onclick="submitDeliveryInfo()">Submit</button>
        </div>
    </div>

    <div id="cart">
     <div id="toast"></div>
      <h2 class="h2">My Cart</h2>
      <ul id="cart-items"></ul>
      <p>Total: Ksh. <span id="cart-total">0</span></p>
      <button class="btn check-out" onclick="checkout()">Checkout</button>
    </div>

    <div id="chat-widget" class="chat-widget">
	<div id="chat-messages" class="chat-messages"></div>
	<input type="text" id="chat-message" placeholder="Type your message...">
	<button onclick="sendMessage()">Send</button>
	<button onclick="clearChat()">Clear Chat</button>
    </div>
    <button id="chat-toggle" onclick="toggleChat()">Chat</button>
    <div id="chat-notification" class="chat-notification">New Message</div>
      
    <footer>
       <p>&copy; 2024 Shopping Market. All rights reserved. Authors: Susan Kimemia & Levince Otieno. Contact: <a href="mailto:shopping_market@gmail.com">shopping_market@gmail.com</a></p>
    </footer>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chat.js"></script>
    <script src="/js/cart.js"></script>
</body>
</html>
